<form method="post" action="/notes/<%= @id %>">
  <input type="hidden" name="_method" value="patch">
  <input class="form-control form-control-lg mb-4" type="text" name="title" value="<%= @title %>">
  <textarea class="form-control form-control-lg mb-4" name="text" rows="20"><%= @text %></textarea>
  <div class="row">
    <div class="col">
      <a class="btn btn-lg btn-outline-dark" href="/notes/<%= @id %>">Back</a>
    </div>
    <div class="col text-end mb-4">
      <button class="btn btn-lg btn-dark" type="submit">Save</button>
    </div>
  </div>
</form>
