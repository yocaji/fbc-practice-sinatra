  <input class="form-control form-control-lg mb-4" type="text" name="title" value="">
  <textarea class="form-control form-control-lg mb-4" name="text" rows="20"></textarea>
  <div class="row">
    <div class="col">
      <a class="btn btn-lg btn-outline-secondary" href="/notes">Back</a>
    </div>
